.container {
  height: 100%;
}

.selection {
  border-bottom: 3px solid #ddd;
}

.selection:last-child {
  border: none;
}

.selection swiper {
  height: 100%;
}

.selection swiper .swiper-img {
  width: 100%;
  height: auto;
}

.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}

.text-all {
  color: green;
  font-size: 10px;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  height: 250rpx;
  width: 45%;
  background-color: gold;
  margin: 5px;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  position: absolute;
  bottom: 0px;
  color: #fff;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 1%;
}

.list-item {
  height: 100%;
  width: 100%;
  margin-bottom: 40rpx;
}

.list-item-images {
  height: 500rpx;
  width: 100%;
  position: relative;
}

.list-item-images-img {
  width: 100%;
  height: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -35rpx;
  right: 100rpx;
}

.list-item-text {
  height: 100%;
  width: 96%;
  margin-top: 20rpx;
  padding: 0 2%;
}

.list-item-text-content {
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;
  text-align: justify;
}