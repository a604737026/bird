page {
    background-color: #f6f6f6;
}
.line{
    height: 1rpx;
    background-color: #f6f6f6;
    width: 100%;
    padding: 10rpx 0;
}
.bird {
    width: 100%;
    background-color: #fff;
    
}

.bird-cont {
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx 30rpx;
}

.bird-txt {
    display: flex;
    flex-direction: column;
    flex: 1;
    
}
.bird-txt text{
    font-size: 28rpx;
    color: #888;
    padding:0 20rpx;
}
.bird-txt text:first-child{
    color: #000;
    font-size: 32rpx;
    padding-bottom: 30rpx;
}
.bind-img {
    width: 300rpx;
    height: 350rpx;
}

.bind-img image {
    width: 100%;
    height: 100%;
}

.bird-content {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
}
.bird-content text{
    font-size: 28rpx;
    color: #666;
    padding-bottom: 20rpx;
    text-indent: 2em;
    
}
