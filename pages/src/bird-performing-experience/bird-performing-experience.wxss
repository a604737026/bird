page{
    background-color: #f6f6f6;
}
.bird{
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    padding:20rpx 30rpx;
}
.bird-title{
    color: #000;
    font-weight: 900;
}
.bird-txt{
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}
.bird-txt text{
    font-size: 26rpx;
    color: #666;
    text-indent: 2em;
    padding-bottom: 20rpx;
    line-height: 2;
}

.bird-img{
    display: flex;
}
.bird-img image{
    width: 100%;
    height: 100%;
}