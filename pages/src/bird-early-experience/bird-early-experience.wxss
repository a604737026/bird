page{
    background-color: #f6f6f6;
}
.bird{
    width: 100%;
    background-color: #fff;
    padding: 20rpx;
    box-sizing: border-box;
}
.bird-title{
    color: #000;
    font-weight: 900;
   
}
.bind-txt{
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}
.bind-txt text{
    font-size: 26rpx;
    color: #666;
    padding-bottom: 10rpx;
    text-indent: 2em;
    line-height: 2;
}
.bird-img{
    width: 90%;
    margin:30rpx auto;
}
.bird-img image{
    width: 100%;
    height: 100%;
}